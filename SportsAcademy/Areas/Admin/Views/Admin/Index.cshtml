@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> memberships.
        <br />You can <b>buy</b> and <b>cancel</b> the ones, you dont want!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and members</b> and <b>all buys</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="SportMembership" asp-action="All"
       class="btn btn-primary btn-lg">All Memberships</a>
    <a asp-area="" asp-controller="SportMembership" asp-action="Add"
       class="btn btn-primary btn-lg">Add Membership</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="SportMembership" asp-action="Mine"
       class="btn btn-primary btn-lg">My Memberships</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Buys" asp-action="All"
       class="btn btn-primary btn-lg">All Buys</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>
